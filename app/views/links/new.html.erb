<% content_for(:title, "Add Link | Hacker News") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3 site">
    <div class="site-title">
      <h2>Add a Link:</h2>
    </div>

<div class="post">
  <%= form_for(@link) do |f| %>
    <div class="form-group">
      <%= f.text_field :description, :placeholder => "Description" %>
    </div>
    <div class="form-group">
      <%= f.text_field :link, :placeholder => "URL" %>
    </div>

    <div class="form-group">
     <%= f.select("user_id",  User.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }) %>

    </div>


    <%= f.submit(:class => "btn btn-primary") %>
  <% end %>
</div>

  </div><!-- div for col -->
</div><!-- div for row -->
